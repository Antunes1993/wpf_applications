<Window x:Class="app_01.Windows.custom_application_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:app_01.Windows"
        mc:Ignorable="d" WindowStyle="None" MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Title="custom_application_window" Height="450" Width="400">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnMinimize" Content="-" Click="btnMinimize_Click" Width="40" Height="40"
        BorderBrush="Transparent" Background="Transparent"/>

            <Button x:Name="btnMaximize" Content="🗖" Click="btnMaximize_Click" Width="40" Height="40"
        BorderBrush="Transparent" Background="Transparent"/>
            
            <Button x:Name="btnClose" Content="X" Click="btnClose_Click" Width="40" Height="40"
                    BorderBrush="Transparent" Background="Transparent"/>
            
        </StackPanel>
    </Grid>
</Window>
